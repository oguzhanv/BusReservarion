            @{
                @for (int i = 1; i < 40; i++)
                {
                    @foreach (var item in Model.Ticket)
                    {
                        List<int> SelectedSeats = new List<int>();

                        if (i == item.TicketSeatNo)
                        {
                            SelectedSeats.Add(i);

                            foreach (var seat in SelectedSeats)
                            {
                                for (int j = 1; j <= i; j++)
                                {
                                    if (j == seat)
                                    {
                                        @if (item.TicketGender == "Erkek")
                                        {
                                            <input class="seat selected-man child" value="@j"/>
                                        }
                                        else if (item.TicketGender == "Kadın")
                                        {
                                            <input class="seat selected-woman child" value="@j"/>
                                        }
                                        i++;
                                    }
                                }
                            }
                        }
                    }
                    <input type="submit" class="seat child" value="@i" asp-for="TicketSeatNo" />
                }
            }
        </div>
        <input type="hidden" asp-for="TicketFromWhere" />
        <input type="hidden" asp-for="TicketToWhere" />
        <input type="hidden" asp-for="RouteId" />
    </form>
